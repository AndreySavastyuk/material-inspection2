# Application Settings
APP_NAME="Metal Inspection System"
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql://metal_user:metal_pass@localhost:5432/metal_inspection
# For SQLite (development):
# DATABASE_URL=sqlite:///./metal_inspection.db
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# File Storage
UPLOAD_PATH=./uploads
CERTIFICATES_PATH=./certificates
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Workflow Settings
WORKFLOW_AUTO_TRANSITION=True
WORKFLOW_NOTIFICATION=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@metalinspection.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000